{{#each posts as |post| }}

<div class="card">
  <div>
    <h2>
      <a class="home-header" href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p class="card-text">{{post.content}}</p>
      <div class="col text-center">
        <button type="button" class="btn btn-secondary more-button"><a href="/blogpost/{{post.id}}"> Click Here for
            More
          </a></button>
      </div>
      <footer class="blockquote-footer">Posted on {{format_date post.date_created}}
        <div>
          <cite title="Source Title">Writen
            by {{post.user.name}}
          </cite>
        </div>
      </footer>
    </blockquote>
  </div>
</div>

{{/each}}