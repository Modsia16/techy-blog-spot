<div class="row">
  <div class="col-auto">
    <h2>Hello, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="new-post-form">
      <div>
        <label for="post-name">Blog Name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div>
        <label for="post-desc">Blog Post</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div>
        <button class="new-post-form" type="submit" class="btn btn-primary">Post Blog</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Blogposts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
